{
  "inlayHints": {
    "maxLength": null,
    "lifetimeElisionHints": {
      "useParameterNames": true,
      "enable": "skip_trivial"
    },
    "closureReturnTypeHints": {
      "enable": "always"
    }
  },
  "languages": {
    "Markdown": {
      "preferred_line_length": 80,
      "soft_wrap": "preferred_line_length"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          // "target": "wasm32-unknown-unknown",
          "allFeatures": true
        }
      }
    }
  }
}
